{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfig": {
            "install": [
                "pip install poetry",
                "poetry install"
            ]
        }
    },
    "deploy": {
        "startCommand": "poetry run uvicorn app.server:app --host 0.0.0.0 --port $PORT"
    }
}